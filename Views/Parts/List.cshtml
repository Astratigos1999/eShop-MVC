                            <br />
                            <a asp-action="List" asp-route-filter="Φίλτρο Βενζίνης">Φίλτρο Βενζίνης</a>
                            <br />
                            <a asp-action="List" asp-route-filter="Μπάρα Θόλου">Μπάρα Θόλου</a>
