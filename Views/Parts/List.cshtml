                    </td>
                </tr>
            </table>
        </div>
        <div class="col-9">
            <div class="container-fluid">
                <div class="table-hover">
                    @foreach (var item in Model)
                    {
                        <div class="row align-items-center">
                            @if (User.IsInRole(Constants.AdminRole))
                            {
                                <div class="col">
                                    <input type="checkbox" class="custom-checkbox" value="@item.ID" name="IDcheckbox" />
                                </div>
                            }
                            <div class="col">
                                <img src="~/images/@item.Image" width="100" height="100" />
                            </div>
                            <div class="col">
                                @item.Name
                            </div>
                            <div class="col">
                                @item.Price.ToString("C2")
                            </div>
                            <div class="col">
                                <a asp-route-Id="@item.ID" asp-action="Details">Λεπτομέρειες</a>
                            </div>
                            @if (User.IsInRole(Constants.AdminRole))
                            {
                                <div class="col">
                                    <a asp-route-Id="@item.ID" asp-action="AddEdit">Επεξεργασία</a>
                                </div>
                            }
                            <div class="col">
                                <a class="btn btn-primary" asp-action="AddToCart" asp-route-page="@Model.PageNumber" asp-route-filter="@ViewBag.CurrentFilter" asp-route-id="@item.ID">
                                    <i class="fas fa-shopping-cart"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}


@Html.PagedListPager((IPagedList)Model, page => Url.Action("List", new { page, filter = ViewBag.CurrentFilter }))
    <script>
        function MoreCarParts() {
            var btnText = document.getElementById("carparts");
            var x = document.getElementById("morecarparts");
            if (x.style.display === "none") {
                x.style.display = "block";
                btnText.innerHTML = "Λιγότερα";
            }
            else {
                x.style.display = "none";
                btnText.innerHTML = "Περισσότερα";
            }
        }
        function MoreBikeParts() {
            var btnText = document.getElementById("bikeparts");
            var x = document.getElementById("morebikeparts");
            if (x.style.display === "none") {
                x.style.display = "block";
                btnText.innerHTML = "Λιγότερα";
            }
            else {
                x.style.display = "none";
                btnText.innerHTML = "Περισσότερα";
            }
        }
        function MoreBoatParts() {
            var btnText = document.getElementById("boatparts");
            var x = document.getElementById("moreboatparts");
            if (x.style.display === "none") {
                x.style.display = "block";
                btnText.innerHTML = "Λιγότερα";
            }
            else {
                x.style.display = "none";
                btnText.innerHTML = "Περισσότερα";
            }
        }
    </script>
