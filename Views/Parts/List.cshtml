                            <a asp-action="List" asp-route-filter="Σχοινί">Σχοινί</a>
                            <br />
                            <a asp-action="List" asp-route-filter="Αντλία">Αντλία</a>
                            <br />
                            <a asp-action="List" asp-route-filter="Marine Audio">Marine Audio</a>
                            <br />
                            <a asp-action="List" asp-route-filter="Είδος για Τρέιλερ Σκάφους">Είδος για Τρέιλερ Σκάφους</a>
                            <br />
